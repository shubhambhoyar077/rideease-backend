{
  "openapi": "3.0.1",
  "components": {
    "securitySchemes": {
      "bearer_auth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "paths": {
    "/api/services": {
      "get": {
        "summary": "Retrieves a cars",
        "tags": [
          "Cars"
        ],
        "responses": {
          "200": {
            "description": "cars list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    },
                    "price": {
                      "type": "string"
                    },
                    "details": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "image",
                    "details",
                    "price"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Car not found"
          },
          "406": {
            "description": "unsupported accept header"
          }
        }
      }
    },
    "/api/services/{id}": {
      "get": {
        "summary": "Retrieves a car",
        "tags": [
          "Cars"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Car",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    },
                    "price": {
                      "type": "string"
                    },
                    "details": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "image",
                    "details",
                    "price"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Car not found"
          },
          "406": {
            "description": "unsupported accept header"
          }
        }
      }
    },
    "/users": {
      "post": {
        "summary": "User Sign Up",
        "tags": [
          "Users"
        ],
        "parameters": [

        ],
        "responses": {
          "200": {
            "description": "Sign up successfully Please check your email"
          },
          "422": {
            "description": "User couldn't be created successfully"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "email",
                      "password"
                    ]
                  }
                },
                "required": [
                  "user"
                ]
              }
            }
          }
        }
      }
    },
    "/users/sign_in": {
      "post": {
        "summary": "User Sign In",
        "tags": [
          "Users"
        ],
        "parameters": [

        ],
        "responses": {
          "401": {
            "description": "Couldn't find an active session"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "object",
                    "properties": {
                      "email": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "email",
                      "password"
                    ]
                  }
                },
                "required": [
                  "user"
                ]
              }
            }
          }
        }
      }
    }
  }
}